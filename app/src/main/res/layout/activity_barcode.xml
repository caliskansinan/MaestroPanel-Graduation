<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ui.BarcodeActivity"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/barcode"
         />

    <Button
        android:id="@+id/btnReadQR"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/read_barcode" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="@string/api_key"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="16dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/txtQR"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="1_e547c39d90024967b3098379872a527c"
            android:textSize="8dp"
            android:inputType="text" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/server_address"
            android:textAlignment="viewStart"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/txtServer"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:text="176.53.0.115"
            android:textAlignment="center"
            android:textSize="8dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="0.47"
            android:text="@string/auto_login"
            android:textSize="16dp" />

        <ToggleButton
            android:id="@+id/tbAuto"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:checked="true"
            android:text="@string/enable"
            android:textOff="@string/disable"
            android:textOn="@string/enable" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/login" />
</LinearLayout>
